@model Twitstagram.Models.Home
@{
    ViewBag.Title = "UserTimeLine";

}

<!DOCTYPE html>
<html>
<head>

</head>
<body>
<div>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label class="col-form-label col-form-label-lg" for="inputLarge">Twitter UserName:</label>
        <input class="form-control form-control-lg" type="text" name="username" placeholder="bv. bencom_group" id="inputLarge">

        <label class="col-form-label col-form-label-lg" for="inputLarge">Amount of tweets:</label>
        <input class="form-control form-control-lg" type="text" placeholder="bv. 5" id="inputLarge">
        <p></p>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
@{
    foreach (dynamic tweet in @Model.TimeLine) { 
        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-header">Tweet</div>
            <div class="card-body">
                <h4 class="card-title">@ViewBag.Header</h4>
                <p class="card-text">
                    @tweet
                </p>
            </div>
        </div>
    }
}
</div>
</body>
</html>